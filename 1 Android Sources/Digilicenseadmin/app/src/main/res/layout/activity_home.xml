<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/appbar_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/activity_appbar_loggedin"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/appbar_custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">



                <RelativeLayout
                    android:id="@+id/row1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/btn_editLicense_data"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/edit_licensedata"
                                android:background="@drawable/login_btn"
                                />

                            <TextView
                                android:id="@+id/label_editLicense_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit License Data"
                                android:textSize="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/violetlight"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginTop="20dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/btn_editLicense_data"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/btn_editLicense_type"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/edit_licensedata"
                                android:background="@drawable/login_btn"

                                />


                            <TextView
                                android:id="@+id/label_editLicense_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit License Type"
                                android:textSize="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/violetlight"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginTop="20dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/btn_editLicense_type"/>


                        </RelativeLayout>


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/row2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/row1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/btn_deletelicense"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/delete_license"
                                android:background="@drawable/login_btn"
                                />

                            <TextView
                                android:id="@+id/label_deletelicense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Remove License"
                                android:textSize="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/violetlight"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginTop="20dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/btn_deletelicense"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/btn_addpolice"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/addpolice"
                                android:background="@drawable/login_btn"

                                />


                            <TextView
                                android:id="@+id/label_addpolice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Police"
                                android:textSize="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/violetlight"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginTop="20dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/btn_addpolice"/>


                        </RelativeLayout>





                    </LinearLayout>





                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/row3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/row2">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/btn_addvehicle"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/add_vehicle"
                                android:background="@drawable/login_btn"
                                />

                            <TextView
                                android:id="@+id/label_deletevehicle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_vehicle"
                                android:textSize="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/violetlight"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginTop="20dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/btn_addvehicle"/>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/btn_removepolice"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/delete_license"
                                android:background="@drawable/login_btn"
                                />

                            <TextView
                                android:id="@+id/label_removepolice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Remove Police"
                                android:textSize="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/violetlight"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginTop="20dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/btn_removepolice"/>


                        </RelativeLayout>




                    </LinearLayout>








                </RelativeLayout>




            </RelativeLayout>










        </RelativeLayout>





    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>