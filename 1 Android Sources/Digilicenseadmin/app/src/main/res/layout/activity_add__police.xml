<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Police">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/appbar_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/activity_appbar_loggedin"/>

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/div_login"
            android:layout_below="@+id/appbar_custom"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">



            <EditText
                android:id="@+id/addpolice_username"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:width="300dp"
                android:background="@drawable/login_edittext_border"
                android:hint="Enter Police Username"
                android:layout_centerInParent="true"
                android:textColor="@color/violetdark"
                android:textColorHint="@color/violetlight"
                android:inputType="text"
                android:gravity="center"
                android:textSize="20dp"
                />


            <EditText
                android:id="@+id/addpolice_password"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:width="300dp"
                android:layout_below="@id/addpolice_username"
                android:background="@drawable/login_edittext_border"
                android:hint="Enter Police Password"
                android:layout_centerInParent="true"
                android:textColor="@color/violetdark"
                android:textColorHint="@color/violetlight"
                android:inputType="textPassword"
                android:gravity="center"
                android:textSize="20dp"
                />






            <Button
                android:id="@+id/btn_vehicle_submit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:text="@string/add_police"
                android:textAllCaps="false"
                android:layout_below="@+id/addpolice_password"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_btn"
                android:shadowColor="@color/violetdark"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                />





        </RelativeLayout>





    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>