<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemovePolice">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/appbar_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/activity_appbar_loggedin"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/div_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">



            <EditText
                android:id="@+id/removeuser_username"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:width="300dp"
                android:background="@drawable/remove_edittext_border"
                android:hint="@string/login_username"
                android:gravity="center"
                android:textColor="@color/violetdark"
                android:textColorHint="@color/redwarning"
                android:inputType="text"
                android:textSize="20sp"
                />



            <Button
                android:id="@+id/btn_removeuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove Police"
                android:textAllCaps="false"
                android:layout_below="@+id/removeuser_username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/remove_btn"
                android:shadowColor="@color/violetdark"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                />




        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:background="@color/redwarning">



            <TextView
                android:id="@+id/label_helper"
                android:text="@string/note_if_you_remove_user_there_is_now_way_to_recover_user_data_back"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textSize="8dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




        </RelativeLayout>













    </RelativeLayout>










</androidx.constraintlayout.widget.ConstraintLayout>