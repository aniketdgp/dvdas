<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FineUser">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/appbar_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/activity_appbar_loggedin"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/div_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">



            <EditText
                android:id="@+id/fine_username"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:width="300dp"
                android:background="@drawable/login_edittext_border"
                android:hint="@string/login_username"
                android:gravity="center"
                android:textColor="@color/greendark"
                android:textColorHint="@color/greenlight"
                android:inputType="text"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/fine_reason"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:width="300dp"
                android:background="@drawable/login_edittext_border"
                android:hint="@string/reason_for_fine"
                android:gravity="center"
                android:textColor="@color/greendark"
                android:textColorHint="@color/greenlight"
                android:inputType="text"
                android:textSize="20dp"
                android:layout_below="@id/fine_username"
                android:layout_marginTop="30dp"
                />

            <EditText
                android:id="@+id/fine_amount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:width="300dp"
                android:background="@drawable/login_edittext_border"
                android:hint="Fine Amount"
                android:gravity="center"
                android:textColor="@color/greendark"
                android:textColorHint="@color/greenlight"
                android:inputType="numberDecimal"
                android:textSize="20dp"
                android:layout_below="@id/fine_reason"
                android:layout_marginTop="30dp"
                />



            <Button
                android:id="@+id/btn_fine_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fine User"
                android:textAllCaps="false"
                android:layout_below="@+id/fine_amount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_btn"
                android:shadowColor="@color/greendark"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                />





        </RelativeLayout>





    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>