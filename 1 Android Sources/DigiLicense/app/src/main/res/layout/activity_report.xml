<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Report">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/appbar_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/activity_appbar_loggedout"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">



            <EditText
                android:id="@+id/reason"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:width="300dp"
                android:background="@drawable/login_edittext_border"
                android:hint="Reason"
                android:gravity="center"
                android:textColor="@color/greendark"
                android:textColorHint="@color/greenlight"
                android:inputType="text"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                />



            <EditText
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:width="300dp"
                android:background="@drawable/login_edittext_border"
                android:hint="Location of Incident"
                android:gravity="center"
                android:textColor="@color/greendark"
                android:textColorHint="@color/greenlight"
                android:inputType="textPostalAddress"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/reason"
                />



            <Button
                android:id="@+id/btn_reportdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Report"
                android:textAllCaps="false"
                android:layout_below="@+id/location"
                android:layout_marginTop="40dp"
                android:background="@drawable/login_btn"
                android:shadowColor="@color/greendark"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed"
                />




        </RelativeLayout>







    </RelativeLayout>












</androidx.constraintlayout.widget.ConstraintLayout>